@page
@model ForgotPasswordModel
@{
    ViewData.SetMeta("Login"); Layout = "~/Pages/Shared/_LayoutEmpty.cshtml";
}
<style type="text/css">
    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 10px;
    }
    .glass{
        background: rgba(6, 21, 93, 0.04);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(0px);
        -webkit-backdrop-filter: blur(0px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding:0px 15px 0px 15px;
    }
    .text-primary {
        color: #0659b2 !important
    }
</style>
<div class="col-5 center glass">
    <div class="row">
        <div class="col-7 align-self-end" style="margin:auto">
            <img src="~/img/amsImage.png" alt="" height="200" width="250" style="float:left" class="img-fluid">
        </div>
        <div class="col-5 align-self-end" style="margin:auto;">
            <img src="~/img/logoWhite.png" alt="" height="100" width="150" style="float:right" class="img-fluid">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="p-5">
                <form class="user" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="All" class="text-white"></div>
                    <div class="form-group">
                        <input asp-for="FormData.EmailAddress" class="form-control" placeholder="Enter your email...">
                    </div>
                    <div class="text-center" style="display:flex;justify-content:center">
                        <button class="btn btn-block" type="submit" style="border-radius:10px;background:#0659b2;color:#fff;width:40%"> Reset Password </button>
                    </div>
                    <div class="text-center" style="display:flex;justify-content:center;margin-top:20px">
                        <a asp-page="/Account/Login" style="float:right;color:#fff">Already have an account? <b>Login!</b></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
    </script>
}
