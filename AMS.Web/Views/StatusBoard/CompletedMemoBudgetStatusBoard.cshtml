
@{
    ViewData["Title"] = "Completed Memo Budget";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header">
        <label> Completed Budget Estimation Memo Status Board</label>
    </div>
    <div class="container">
        <fieldset>
            <legend>Search Filter</legend>
            <div class="container">
                <form>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="identificationId">Identification</label>
                            <input type="search" class="form-control searchFilter" id="identificationId" placeholder="Search Identification" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="subjectId">Subject</label>
                            <input type="search" class="form-control searchFilter" id="subjectId" placeholder="Search Subject" />
                        </div>
                    </div>
                </form>
            </div>
        </fieldset>
    </div>
    <div class="card-body">
        <table style="font-weight: 400;" class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info">
            <thead class="thead-dark">
                <tr>
                    <th>Budget Detail</th>
                    <th>Creation Details</th>
                    <th>Status</th>
                    <th>Work Flow</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-center">
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script>

        $(document).ready(function () {
            loadDataForTable();

            $(".searchFilter").keyup(function () {
                loadDataForTable();
            });
        });

        function loadDataForTable() {
            var identificationId = (($('#identificationId').val()) ? $('#identificationId').val() : '');
            var subjectId = (($('#subjectId').val()) ? $('#subjectId').val() : '');

            $('#dataTable').dataTable({
                "ordering": false,
                destroy: true,
                "processing": true,
                searching: false,
                serverSide: true,
                ajax: {
                    url: "/StatusBoard/LoadCompletedMemoParkeingData",
                    type: 'POST',
                    data: function (d) {
                        d.searchIdentity = identificationId;
                        d.searchSubject = subjectId;
                    }
                }
            });
        }

        $(document).on("click", "#btnReloadData", function () {
            location.reload();
        });
    </script>
}



