@{
    ViewData["Title"] = "Memo Pending List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header">

        <a id="btnReloadData" href="#" class="float-left">
            <span class="">
                Settled Estimate List For
